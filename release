#!/bin/sh

date=`./maxdate`
cvs ci -m 'release $date'
cvs tag -F rel-$date

echo -n "Repository checked in and taged.  Press RETURN to continue."
read answert

files="`ls [A-Z]* makefile`"
files="$files `ls *.[ch] |grep -v test`"
files="$files `ls examples/*.{c,aig} examples/makefile`"

dir="/tmp/aiger-$date"
if [ -d $dir ]
then
  echo -n "Found '$dir'. Press RETURN to delete and continue."
  read answer
  rm -rf $dir || exit 1
fi

mkdir $dir || exit 1
