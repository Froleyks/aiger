#!/bin/sh

date=`./maxdate`
cvs ci -m 'release $date'
cvs tag -F rel-$date

doc="README FORMAT LICENSE"
build="makefile"
impl="`ls *.c *.h|grep -v test`"
examples="`cd examples; ls *.c *.aig makefile|sed -e 's,^,examples/,'`"

files="$doc $build $impl $examples"

dir="/tmp/aiger-$date"
[ -d $dir ] && rm -rf $dir || exit 1

mkdir $dir || exit 1
for f in $files
do
  cp $f $dir
  echo $date > $dir/VERSION
done
