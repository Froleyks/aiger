MODULE main
VAR
  a : boolean;
  b : boolean;
  c : boolean;
  at : boolean;
  bt : boolean;
  ct : boolean;
  i : boolean;
  v : boolean;
ASSIGN
  init (a) := 0;
  next (a) := at;
  init (b) := 0;
  next (b) := bt;
  init (c) := 0;
  next (c) := ct;
  init (i) := 0;
  next (i) := 1;
  init (v) := 0;
  next (v) := 
   (!i & ((at = ct) & (bt != ct))) | 
   (v & ((at = bt) -> (a = b)));
SPEC
  AG (v -> (a != b))
